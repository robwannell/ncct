<h1>
  <%= @album.title %>
</h1>

<p><%= simple_format(@album.description)%></p>
<hr>
<div class="albums">
	
<% @photo.each do |p| %>
<div class="album-pics"><%= link_to (image_tag p.avatar.url(:thumb)), p %>
</div>
<% end %>



</div>

<div class="album-bottom"></div>
<%= link_to 'Back to folder', folder_path(@album.folder_id) %> | <%= link_to 'Back to all folders', gallery_path %>

<% content_for :rh do %>

<div class="well">
	
<span class="glyphicon glyphicon-info-sign info"></span><h4>View this album</h4><p>Click on a photo to view, then navigate through the album using the buttons below each image.</p>
<p><%= link_to 'Back to all albums', gallery_path, class: "btn btn-default" %>
	
<% if current_user %>
<h4>Admin options</h4>
<p><%= link_to 'Add a New Photo to this album', new_photo_path(:album_id => @album.id), class: "btn btn-default" %>
	<p><% if current_user %><small><%= link_to 'Edit the Album details', edit_album_path(@album), class: "btn btn-default" %>  <%= link_to 'Destroy Album', @album, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></small><% end %>
<% end %>

</div>
<% end %>