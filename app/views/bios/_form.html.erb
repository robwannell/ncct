<div class="smallform">
	<%= bootstrap_form_for(@bio, :html => { :multipart => true }) do |f| %>
  <% if @bio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bio.errors.count, "error") %> prohibited this bio from being saved:</h2>

      <ul>
      <% @bio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    
    <%= f.text_field :name, placeholder: "First and last name " %>
  </div>
  <div class="field">
    
    <%= f.text_field :position, placeholder: "Job title " %>
  </div>
  <div class="field">
	   <%= f.file_field :avatar, label: 'Add an image' %>
	  </div>
  <div class="field">
    
    <%= f.text_area :story, placeholder: "Tell us about this team member " %>
  </div>
  <div class="field">
    
    <%= f.number_field :rank, placeholder: "Set order to display the staff members in. Zero is the highest. " %>
  </div>
  <div class="actions">
    <%= f.submit :submit, class: "btn btn-default pull-right" %>
  </div>
<% end %>
</div>