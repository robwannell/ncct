<div class="smallform">
	<%= bootstrap_form_for(@boardmember, :html => { :multipart => true }) do |f| %>
  <% if @boardmember.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@boardmember.errors.count, "error") %> prohibited this boardmember from being saved:</h2>

      <ul>
      <% @boardmember.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, placeholder: "First and last name " %>
  </div>
  <div class="field">
    <%= f.text_field :title, placeholder: "Title " %>
  </div>
  
  <div class="field">
     <% unless @boardmember.avatar.blank? %>
     <p><b>Current image</b><br/><%= link_to (image_tag @boardmember.avatar.url(:thumb)), @boardmember.avatar.url(:medium), target: '_blank' %> </p><%= f.file_field :avatar, label: 'Add a new image'%></p>
     <% else %>
     <%= f.file_field :avatar, label: 'Add an image'%>
     <% end %>
	  </div>
  
	  
  <div class="field">
    <%= f.text_area :body, placeholder: "Add a Bio " %>
  </div>
  <div class="field">
    
    <%= f.number_field :rank, placeholder: "Set order to display the staff members in. Zero is the highest. " %>
  </div>
  <div class="actions">
    <%= f.submit :submit, class: "btn btn-default pull-right" %>
  </div>
<% end %>
</div>