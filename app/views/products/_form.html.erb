<div class="smallform"><%= bootstrap_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
   
    <%= f.text_field :name %>
  </div>
  <div class="field">
    
    <%= f.number_field :price %>
  </div>
  <div class="field">
   
    <%= f.number_field :item %>
  </div>
  <div class="field">
  <% unless @product.avatar.blank? %>
  <p><b>Current image</b><br/><%= link_to (image_tag @product.avatar.url(:thumb)), @product.avatar.url(:medium), target: '_blank' %> </p><%= f.file_field :avatar, label: 'Add a new image'%></p>
  <% else %>
  <%= f.file_field :avatar, label: 'Add an image'%>
  <% end %>
</div>
  
  <div class="field">
    
    <%= f.text_area :description, rows: "5" %>
  </div>
  <div class="actions">
    <%= f.submit :submit, class: "btn btn-default pull-right" %>
  </div>
<% end %>
</div>