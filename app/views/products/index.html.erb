<h1>NCCT Products for sale</h1>


<p>Display products by 
	<% if params[:sort]=='newest' or @default=='selected'%>
	<%= link_to 'most recent',{:sort => "newest"}, :class=> "label label-primary" %>
	<% else %><%= link_to 'most recent',  :sort => "newest" %><% end %> | 
	
	<% if params[:sort]=='low_to_high'%>
	<%= link_to 'price (low to high)',{:sort => "low_to_high"}, :class=> "label label-primary" %>
	<% else %><%= link_to 'price (low to high)',  :sort => "low_to_high" %><% end %> |
	
	<% if params[:sort]=='high_to_low'%>
	<%= link_to 'price (high to low)',{:sort => "high_to_low"}, :class=> "label label-primary" %>
	<% else %><%= link_to 'price (high to low)',  :sort => "high_to_low" %><% end %> 
	
	
	


    <% @products.each do |product| %>
     <div class="shop-item">
	 <div class="shop-item-img"> <%= image_tag product.avatar.url(:thumb) %></div>
	  <div class="shop-item-desc"> <%= product.name %> </div>
	 <div class="shop-item-item">item#<%= product.item %></div>
	  <h5>$<%= product.price %></h5>
	  <p><%= link_to 'More Info', product, class: "btn btn-primary shop-item-btn" %>
	 </div>
      
    <% end %>
 
 
