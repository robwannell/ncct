<div class="smallform"><%= bootstrap_form_for(@success_story) do |f| %>
  <% if @success_story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@success_story.errors.count, "error") %> prohibited this success_story from being saved:</h2>

      <ul>
      <% @success_story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
   
    <%= f.text_field :name %>
  </div>
  <div class="field">
   
    <%= f.text_field :title %>
  </div>
  <div class="field">
	  
  <div class="field">
     <% unless @success_story.avatar.blank? %>
     <p><b>Current image</b><br/><%= link_to (image_tag @success_story.avatar.url(:thumb)), @success_story.avatar.url(:medium), target: '_blank' %> </p><%= f.file_field :avatar, label: 'Add a new image'%></p>
     <% else %>
     <%= f.file_field :avatar, label: 'Add an image'%>
     <% end %>
	  </div>
	  
    
    <%= f.text_area :content, rows: '10' %>
  </div>
  <div class="field">
  
    <%= f.number_field :ranking %>
  </div>
  <div class="actions">
   <%= f.submit :submit, class: "btn btn-default pull-right" %>
  </div>
<% end %>
</div>
